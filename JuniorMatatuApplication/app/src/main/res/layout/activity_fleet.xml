<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/blur"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junior.juniormatatuapplication.Prices">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Number Plate"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt1"
        android:layout_alignRight="@+id/edt1"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Car Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt2"
        android:layout_alignStart="@+id/edt2"
        android:layout_below="@+id/edt2"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Carrying Capacity"
        android:inputType="textPersonName" />

    <Button
        android:onClick="AddData"
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt3"
        android:layout_alignStart="@+id/edt3"
        android:layout_below="@+id/edt3"
        android:layout_marginTop="29dp"
        android:text="Add Matatu" />

    <Button
        android:onClick="ViewAll"
        android:id="@+id/btnview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnadd"
        android:layout_alignStart="@+id/btnadd"
        android:layout_below="@+id/btnadd"
        android:layout_marginTop="26dp"
        android:text="View Collection" />

</RelativeLayout>
