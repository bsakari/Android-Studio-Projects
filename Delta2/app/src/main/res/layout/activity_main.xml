<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#01305e"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpha.delta.MainActivity">

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fcf9e4"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Name" />

    <EditText
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#14013b"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#dff3fd"
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your Name Here"
        android:inputType="textPersonName" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fcf9e4"
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your eMail Address" />

    <EditText
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#14013b"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#dff3fd"
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your eMail Here"
        android:inputType="textEmailAddress" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fcf9e4"
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Password" />

    <EditText
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#14013b"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#dff3fd"
        android:id="@+id/edt3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your Password Here"
        android:inputType="textPassword" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fcf9e4"
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Verification Code" />

    <EditText
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#14013b"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#dff3fd"
        android:id="@+id/edt4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your Code Here"
        android:inputType="number" />

    <Button
        android:shadowRadius="20"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000541"
        android:background="#88d7ff"
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />
</LinearLayout>
