<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alpha.intentsalpha.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:onClick="Call"
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Call" />

    <Button
        android:onClick="Messaging"
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn1"
        android:layout_alignRight="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="64dp"
        android:text="Message" />

    <Button
        android:onClick="Camera"
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn2"
        android:layout_alignRight="@+id/btn2"
        android:layout_below="@+id/btn2"
        android:layout_marginTop="82dp"
        android:text="Camera" />

    <Button
        android:onClick="Share"
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn3"
        android:layout_marginBottom="67dp"
        android:text="Share" />
</RelativeLayout>
