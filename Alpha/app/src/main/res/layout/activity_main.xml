<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/sasa"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpha.alpha.MainActivity">

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0e003d"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Name" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#5a5c8c"
        android:textStyle="bold"
        android:background="#f4c8a1"
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your Name Here"
        android:inputType="textPersonName" />

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0e003d"
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your eMail" />

    <EditText
        android:background="#f4c8a1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#5a5c8c"
        android:textStyle="bold"
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="eMail Here"
        android:inputType="textEmailAddress" />

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0e003d"
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Password" />

    <EditText
        android:background="#f4c8a1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#5a5c8c"
        android:textStyle="bold"
        android:id="@+id/edt3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Password Here"
        android:inputType="textPassword" />

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0e003d"
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Verification Code" />

    <EditText
        android:background="#f4c8a1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#5a5c8c"
        android:textStyle="bold"
        android:id="@+id/edt4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Code Here"
        android:inputType="number" />

    <Button
        android:onClick="Register"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffe7ae"
        android:background="#052d41"
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />
</LinearLayout>
